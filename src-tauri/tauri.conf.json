{
  "$schema": "https://schema.tauri.app/2/config",
  "productName": "Video Toolbox",
  "version": "0.7.2",
  "identifier": "com.videotoolbox",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../renderer"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Video Toolbox",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": false,
        "focus": true,
        "visible": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**",
          "**/*"
        ]
      },
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost https://asset.localhost data: blob:; media-src 'self' asset: http://asset.localhost https://asset.localhost blob:; connect-src 'self' ipc: https://*"
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "MIT License",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "A comprehensive video toolbox application for encoding, downloading, trimming, and processing video files.",
    "resources": {
      "bin/*": "./bin/"
    },
    "shortDescription": "Video Toolbox",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": [
          "English"
        ],
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {}
}
